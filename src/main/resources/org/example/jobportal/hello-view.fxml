<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.jobportal.HelloController">
    <VBox spacing="10" padding="20">
        <!-- Login Pane -->
        <VBox fx:id="loginPane" spacing="10">
            <Label text="Вход" style="-fx-font-size: 20px;" />
            <TextField fx:id="loginUsername" promptText="Логин" />
            <PasswordField fx:id="loginPassword" promptText="Пароль" />
            <Button text="Войти" onAction="#handleLogin" />
            <Button text="Регистрация" onAction="#switchToRegister" />
        </VBox>

        <!-- Register Pane -->
        <VBox fx:id="registerPane" spacing="10" visible="false">
            <Label text="Регистрация" style="-fx-font-size: 20px;" />
            <TextField fx:id="registerUsername" promptText="Логин" />
            <PasswordField fx:id="registerPassword" promptText="Пароль" />
            <Button text="Зарегистрироваться" onAction="#handleRegister" />
            <Button text="Назад" onAction="#switchToLogin" />
        </VBox>

        <!-- Job Management Pane -->
        <VBox fx:id="jobPane" spacing="10" visible="false">
            <Label text="Управление вакансиями" style="-fx-font-size: 20px;" />
            <TextField fx:id="jobTitle" promptText="Название работы" />
            <TextArea fx:id="jobResponsibilities" promptText="Обязанности" />
            <TextArea fx:id="jobCertificates" promptText="Необходимые сертификаты" />
            <TextArea fx:id="jobSchedule" promptText="График работы" />
            <TextField fx:id="jobSalary" promptText="Зарплата" />
            <HBox spacing="10">
                <Button text="Создать вакансию" onAction="#createJob" />
                <Button text="Редактировать" onAction="#editJob" />
                <Button text="Удалить" onAction="#deleteJob" />
            </HBox>
            <ListView fx:id="jobList" prefHeight="150" />
        </VBox>
    </VBox>
</StackPane>
