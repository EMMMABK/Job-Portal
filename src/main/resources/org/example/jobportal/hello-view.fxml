<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.jobportal.HelloController">

    <center>
        <StackPane>
            <!-- Login Pane -->
            <VBox fx:id="loginPane" alignment="CENTER" spacing="10">
                <Label text="Вход" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <TextField fx:id="loginUsername" promptText="Имя пользователя"/>
                <PasswordField fx:id="loginPassword" promptText="Пароль"/>
                <Button text="Войти" onAction="#handleLogin"/>
                <Hyperlink text="Нет аккаунта? Зарегистрируйтесь" onAction="#switchToRegister"/>
            </VBox>

            <!-- Register Pane -->
            <VBox fx:id="registerPane" alignment="CENTER" spacing="10" visible="false">
                <Label text="Регистрация" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <TextField fx:id="registerUsername" promptText="Имя пользователя"/>
                <PasswordField fx:id="registerPassword" promptText="Пароль"/>
                <Button text="Зарегистрироваться" onAction="#handleRegister"/>
                <Hyperlink text="Уже есть аккаунт? Войдите" onAction="#switchToLogin"/>
            </VBox>

            <!-- Job Pane -->
            <VBox fx:id="jobPane" spacing="10" padding="10" visible="false">
                <Label text="Панель управления вакансиями" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Название вакансии:"/>
                    <TextField fx:id="jobTitle" GridPane.columnIndex="1"/>
                    <Label text="Зарплата:" GridPane.rowIndex="1"/>
                    <TextField fx:id="jobSalary" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Обязанности:" GridPane.rowIndex="2"/>
                    <TextArea fx:id="jobResponsibilities" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label text="Сертификаты:" GridPane.rowIndex="3"/>
                    <TextArea fx:id="jobCertificates" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Label text="График работы:" GridPane.rowIndex="4"/>
                    <TextArea fx:id="jobSchedule" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
                <HBox spacing="10">
                    <Button text="Создать" onAction="#createJob"/>
                    <Button text="Редактировать" onAction="#editJob"/>
                    <Button text="Удалить" onAction="#deleteJob"/>
                </HBox>
                <ListView fx:id="jobList" prefHeight="200"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
